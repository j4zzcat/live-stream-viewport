{
  "compilerOptions": {

    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "lib": [

      "DOM",
      "ES2022"
    ],

    "module": "ES2022",
    "moduleResolution":"node",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  }
}
